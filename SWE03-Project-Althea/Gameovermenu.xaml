<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SWE03_Project_Althea.Gameovermenu"
             Title="Game Over">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label Text="Game Over L" 
               Grid.ColumnSpan="2"
               HorizontalOptions="Center"
               VerticalOptions="Center"></Label>

        <Image Source="gameover.jpg">
            
        </Image>
        
        <Button Text="Restart" 
                Clicked="Reset_btnclicked" 
                Grid.Row="1" 
                Grid.ColumnSpan="2"
                BackgroundColor="Grey"
                Margin="10"></Button>

        <Button Text="Quit" 
                Clicked="Quit_btnclicked" 
                Grid.Row="2" 
                Grid.ColumnSpan="2"
                BackgroundColor="Grey"
                Margin="10"></Button>
    </Grid>
</ContentPage>